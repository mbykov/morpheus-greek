{
  "name": "morpheus",
  "productName": "morpheus greek",
  "version": "0.3.2",
  "description": "Morpheus for ancient greek based on electron.js",
  "main": "main.js",
  "env": "production",
  "scripts": {
    "start": "electron .",
      "rebuild": "electron-rebuild -f -w leveldown",
    "dev": "electron . --debug",
    "lint_": "standard | snazzy",
    "pack_": "build --dir",
    "dist_": "build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "electron-builder"
  },
  "homepage": "http://gr.diglossa.org",
  "repository": "https://github.com/mbykov/morpheus-greek",
  "keywords": [
    "ancient",
    "greek",
    "morphology",
    "syntax",
    "node.js",
    "electron.js"
  ],
    "author": {
        "name": "Michael Bykov",
        "email": "m.bykov@gmail.com"},
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "^1.7.5",
    "electron-builder": "^19.22.1",
    "electron-rebuild": "^1.6.0"
  },
  "dependencies": {
    "antrax": "^0.1.78",
    "component-classes": "^1.2.6",
    "component-emitter": "^1.2.1",
    "component-events": "^1.0.10",
    "electron-is-dev": "^0.1.2",
    "electron-log": "^2.2.6",
    "electron-updater": "^2.4.1",
    "electron-window-state": "^4.1.1",
    "fs-jetpack": "^1.0.0",
    "screen": "^0.2.10",
    "underscore": "^1.8.3"
  },
  "build": {
    "appId": "com.github.mbykov.morpheus-greek",
      "files": [
      "build/",
      "lib/",
      "main.js",
      "contents.js",
      "contents.css",
      "index.html",
      "package.json"
    ],
  "publish": [
      {
        "provider": "github",
        "owner": "mbykov",
        "repo": "morpheus-greek"
      }
    ],
    "mac": {
      "category": "Educational software",
      "target": [
        "zip",
        "dmg"
      ]
    },
      "linux": {
          "category": "Educational software",
          "target": [
              "AppImage",
              "deb"
          ]
      },
      "win": {
          "publisherName": "Michael Bykov",
          "icon": "assets/icon.ico"
      },
      "nsis": {
          "perMachine": false
    }
  }
}
