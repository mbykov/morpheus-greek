{
  "name": "electron",
  "productName": "electron",
  "version": "0.2.52",
  "description": "Morpheus for ancient greek based on electron.js",
  "main": "main.js",
  "scripts": {
      "postinstall": "electron-builder install-app-deps",
      "start": "NODE_ENV=production electron .",
      "dev": "electron . --debug",
      "lint": "standard | snazzy",
      "pack": "build --dir",
      "dist": "build"
  },
  "repository": "https://github.com/mbykov/electron",
  "keywords": [
    "ancient",
    "greek",
    "morphology",
    "syntax",
    "node.js",
    "electron.js"
  ],
  "author": "m.bykov@gmail.com",
  "license": "GPL-3.0",
    "devDependencies": {
        "electron": "^1.6.11",
        "electron-builder": "^19.6.3",
        "electron-packager": "^8.7.1",
        "electron-prebuilt": "^1.4.13",
        "electron-log": "^2.2.6"
    },
    "dependencies": {
        "antrax": "^0.1.59",
        "component-classes": "^1.2.6",
        "component-emitter": "^1.2.1",
        "component-events": "^1.0.10",
        "electron-is-dev": "^0.1.2",
        "electron-updater": "^2.4.1",
        "electron-window-state": "^4.1.1",
        "fs-jetpack": "^1.0.0",
        "orthos": "^0.2.1",
        "pouchdb": "^6.2.0",
        "pouchdb-load": "^1.4.6",
        "underscore": "^1.8.3"
    },
    "build": {
        "appId": "com.github.mbykov.electron",
        "asarUnpack": "pouchdb",
        "publish": [
            {
                "provider": "github",
                "owner": "mbykov",
                "repo": "electron"
            }
        ],
        "mac": {
            "category": "Educational software",
            "target": [
                "zip",
                "dmg"
            ]
        },
        "nsis": {
            "perMachine": false,
            "installerIcon": "build/icon.ico"
        }
    }
}
