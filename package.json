{
  "name": "morpheus",
  "productName": "morpheus greek",
  "version": "0.2.98",
  "description": "Morpheus for ancient greek based on electron.js",
  "main": "main.js",
  "env": "production",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron .",
    "dev": "electron . --debug",
    "lint_": "standard | snazzy",
    "pack_": "build --dir",
      "dist_": "build",
      "pack": "electron-builder --dir",
      "dist": "electron-builder",
      "release": "electron-builder"
  },
    "homepage": "http://gr.diglossa.org",
    "repository": "https://github.com/mbykov/morpheus-greek",
  "keywords": [
    "ancient",
    "greek",
    "morphology",
    "syntax",
    "node.js",
    "electron.js"
  ],
  "author": "m.bykov@gmail.com",
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "^1.6.11",
    "electron-builder": "^19.6.3",
    "electron-packager": "^8.7.1",
    "electron-rebuild": "^1.5.11"
  },
  "dependencies": {
    "antrax": "^0.1.68",
    "component-emitter": "^1.2.1",
    "component-events": "^1.0.10",
    "component-classes": "^1.2.6",
    "electron-is-dev": "^0.1.2",
    "electron-updater": "^2.4.1",
      "electron-window-state": "^4.1.1",
    "electron-log": "^2.2.6",
    "fs-jetpack": "^1.0.0",
    "underscore": "^1.8.3"
  },
  "build": {
    "appId": "com.github.mbykov.morpheus-greek",
      "asarUnpack": "pouchdb",
    "publish": [
      {
        "provider": "github",
        "owner": "mbykov",
        "repo": "electron"
      }
    ],
    "mac": {
      "category": "Educational software",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "win": {
      "publisherName": "Michael Bykov",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "perMachine": false
    }
  }
}
