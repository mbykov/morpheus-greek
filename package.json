{
  "name": "electron",
  "productName": "electron",
  "version": "0.2.9",
  "description": "Morpheus for ancient greek based on electron.js",
  "main": "main.js",
  "scripts": {
    "postinstall": "electron-rebuild",
    "start": "electron .",
    "dev": "electron . --debug",
    "lint": "standard | snazzy",
    "bild": "build",
    "mac": "electron-packager . --overwrite --asar=true --platform=darwin --arch=x64 --icon=icons/mac/book.icns --prune=true --out=release-builds",
    "win32": "electron-packager . --overwrite --asar=true --platform=win32 --arch=ia32 --icon=icons/win/icon.ico --prune=true --out=release-builds",
    "win64_asar": "electron-packager . --overwrite --asar=true --platform=win32 --arch=x64 --icon=icons/win/icon.ico --prune=true --out=release-builds",
    "win64": "electron-packager . --overwrite --platform=win32 --arch=x64 --icon=icons/win/icon.ico --prune=true --out=release-builds",
    "linux": "electron-packager . --overwrite --asar=true --platform=linux --arch=x64 --icon=icons/png/1024x1024.png --prune=true --out=release-builds",
    "installer-mac": "electron-installer-dmg ./release-builds/Electron\\ tutorial\\ app-darwin-x64/Electron\\ tutorial\\ app.app electron-tutorial-app --out=release-builds --overwrite --icon=icons/mac/book.icns",
    "installer-win32": "node installers/windows/createinstaller32.js",
    "installer-win64": "node installers/windows/createinstaller64.js"
  },
  "repository": "https://github.com/mbykov/electron",
  "keywords": [
    "ancient",
    "greek",
    "morphology",
    "syntax",
    "node.js",
    "electron.js"
  ],
  "author": "m.bykov@gmail.com",
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "^1.6.6",
    "electron-packager": "^8.1.0",
    "electron-builder": "^17.3.1",
    "electron-rebuild": "^1.5.11",
    "electron-installer-dmg": "^0.1.2",
    "electron-winstaller": "^2.4.1"
  },
  "dependencies": {
    "antrax": "^0.1.39",
    "component-classes": "^1.2.6",
    "component-emitter": "^1.2.1",
    "component-events": "^1.0.10",
    "electron-log": "^2.2.6",
    "electron-updater": "^1.15.0",
    "electron-window-state": "^4.1.1",
    "fs-jetpack": "^1.0.0",
    "orthos": "^0.2.1",
    "pouchdb": "^6.2.0",
    "pouchdb-load": "^1.4.6",
    "underscore": "^1.8.3"
  },
    "build": {
        "appId": "com.github.mbykov.electron",
        "asar": false,
        "mac": {
            "category": "Educational software",
            "target": [
                "zip",
                "dmg"
            ]
        },
        "nsis": {
            "perMachine": true,
            "installerIcon": "build/icon.ico"
        }
    }
}
